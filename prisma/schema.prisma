generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tutor {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
  firstName String
  lastName  String
  email     String    @unique
  bio       String?
  avatar    String?
  subjects  Subject[]
  sessions  Session[]
}

model Subject {
  id      String @id @default(cuid())
  tutorId String
  topic   String
  tutor   Tutor  @relation(fields: [tutorId], references: [id])
  postId  String
  post   Post  @relation(fields: [postId], references: [id])
}

model Session {
  id          String        @id @default(cuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now())
  tutor       Tutor         @relation(fields: [tutorId], references: [id])
  tutorId     String
  title       String
  description String
  price       Int
  duration    Int
  date        DateTime
  capacity    Int
  reservation Reservation[]
}

model Reservation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id])
  studentId String?
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  route     String
  title String
  description String
  subjects Subject[]
  banner  String
}

model Folder {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  route     String
  name String
}
